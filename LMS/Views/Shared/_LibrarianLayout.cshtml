@{
    var userEmail = Session["UserEmail"] ?? "Librarian";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Librarian</title>
    <style>
/* Reset */
body { margin:0; font-family: Arial, sans-serif; background:#f0f2f5; }

/* Sidebar */
.sidebar {
    width:220px;
    background:#fd7e14;
    color:#fff;
    position:fixed;
    top:0; left:0; bottom:0;
    padding-top:48px;
    transition: transform 0.3s ease;
    z-index: 1001;
}

.sidebar.collapsed { transform: translateX(-220px); }

.sidebar h2 {
    text-align:center;
    margin-bottom:30px;
    font-size:1.5rem;
    color:#fff;
    position:relative;
    z-index:10;
}

.sidebar a { display:block; padding:12px 20px; color:#fff; text-decoration:none; }
.sidebar a:hover, .sidebar a.active { background:#e06b00; border-left:4px solid #ffc107; }

/* Header */
.header {
    position:fixed;
    top:0; left:0; right:0;
    height:60px;
    background:#fff;
    display:flex;
    justify-content:space-between;
    align-items:center;
    padding:0 20px;
    box-shadow:0 2px 6px rgba(0,0,0,0.1);
    z-index:1002;
    transition:left 0.3s ease;
}

.header.collapsed { left:0; }

.hamburger {
    font-size:24px;
    cursor:pointer;
    background:none;
    border:none;
}

.logout-btn {
    background:#fd7e14;
    color:#fff;
    border:none;
    padding:8px 12px;
    border-radius:5px;
    cursor:pointer;
    font-weight:600;
}
.logout-btn:hover { background:#e06b00; }

/* Main content */
.main {
    margin-left:220px;
    margin-top:60px;
    padding:20px;
    transition: margin-left 0.3s ease;
}
.main.collapsed { margin-left:0; }

/* Overlay for outside click */
.overlay {
    position:fixed;
    top:0; left:0;
    width:100%; height:100%;
    background:rgba(0,0,0,0.2);
    display:none;
    z-index:1000;
}
.overlay.active { display:block; }

/* Responsive */
@@media(max-width:768px) {
    .sidebar { width:200px; transform:translateX(-200px); }
    .main { margin-left:0; }
}
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <h2>Librarian</h2>
        <a href="@Url.Action("Index", "Librarian")" class="active">Dashboard</a>
        <a href="@Url.Action("ManageBooks", "Librarian")">Books</a>
        <a href="@Url.Action("IssuedBooks", "Librarian")">Issued Books</a>
        <a href="@Url.Action("Members", "Librarian")">Members</a>
        <a href="@Url.Action("Reports", "Librarian")">Reports</a>
    </div>

    <!-- Overlay -->
    <div class="overlay" id="overlay"></div>

    <!-- Header -->
    <div class="header" id="header">
        <button class="hamburger" id="toggleBtn">&#9776;</button>
        <div>
            <span style="margin-right:15px;">@userEmail</span>
            <form method="get" action="@Url.Action("Logout", "Accounts")" style="display:inline;">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </div>
    </div>

    <!-- Main content -->
    <div class="main" id="main">
        @RenderBody()
    </div>

    <!-- JS for sidebar toggle -->
    <script>
        const sidebar = document.getElementById('sidebar');
        const main = document.getElementById('main');
        const header = document.getElementById('header');
        const overlay = document.getElementById('overlay');
        const toggleBtn = document.getElementById('toggleBtn');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            main.classList.toggle('collapsed');
            header.classList.toggle('collapsed');
            overlay.classList.toggle('active');
        });

        overlay.addEventListener('click', () => {
            sidebar.classList.add('collapsed');
            main.classList.add('collapsed');
            header.classList.add('collapsed');
            overlay.classList.remove('active');
        });
    </script>

</body>
</html>
