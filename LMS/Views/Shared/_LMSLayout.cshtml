<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - LMS</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background: #f5f5f5;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Header */
        header {
            background-color: #007bff;
            color: #fff;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            header h1 {
                font-size: 1.5rem;
            }

        nav a {
            color: #fff;
            text-decoration: none;
            margin-left: 20px;
            font-weight: 500;
        }

            nav a:hover {
                text-decoration: underline;
            }

        .login-btn {
            background: #fff;
            color: #007bff;
            padding: 8px 15px;
            border-radius: 5px;
            font-weight: 600;
            margin-left: 20px;
            text-decoration: none;
            transition: 0.2s;
        }

            .login-btn:hover {
                background: #e0e0e0;
            }

        /* Main content */
        main {
            flex: 1;
            padding: 40px 30px;
        }

        /* Footer */
        footer {
            background: #333;
            color: #fff;
            text-align: center;
            padding: 15px 0;
        }

        @@media(max-width:480px) {
            header h1 {
                font-size: 1.2rem;
            }

            nav a {
                margin-left: 10px;
                font-size: 0.9rem;
            }

            .login-btn {
                padding: 6px 12px;
                font-size: 0.9rem;
            }

            main {
                padding: 20px 15px;
            }
        }
    </style>
</head>
<body>
    <header>
        <h1>Library Management System</h1>
        <nav>
            <a href="@Url.Action("Index", "Home")">Home</a>
            <a href="@Url.Action("About", "Home")">About</a>
            <a href="@Url.Action("Contact", "Home")">Contact</a>
            <!-- Valid login button -->
            <a href="@Url.Action("Login", "Accounts")" class="login-btn">Login</a>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        &copy; 2025 Library Management System. All Rights Reserved.
    </footer>
</body>
</html>
